{   "name":"action_sequence",
    "strict":true,
    "schema": {
        "type":"object",
        "properties":{
            "actions":{
                "type":"array",
                "items":{
                    "type":"object",
                    "properties":{
                        "type":{
                            "type":"string",
                            "enum":["arm","gripper","camera"]
                        },
                        "name":{
                            "type":"string",
                            "enum":["set_pose","open","close","detect","grasp","vertical_pose","horizontal_pose","release"]
                        },
                        "args":{
                            "type":"object",
                            "properties":{
                                "x":{
                                    "type":["string","null"]
                                },
                                "y":{
                                    "type":["string","null"]
                                },
                                "z":{
                                    "type":["string","null"]
                                },
                                "roll":{
                                    "type":["string","null"]
                                },
                                "pitch":{
                                    "type":["string","null"]
                                },
                                "target":{
                                    "type":["string","null"]
                                }
                            },
                            "required":["x","y","z","roll","pitch","target"],
                            "additionalProperties":false
                        }
                    },
                    "required":["type","name","args"],
                    "additionalProperties":false
                }
            }
        },
        "required":["actions"],
        "additionalProperties":false
    }
}
